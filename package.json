{
  "name": "4so-web-template",
  "version": "1.0.3",
  "main": "index.html",
  "description": "Basic template for new websites.",
  "repository": {
    "type": "git",
    "url": "git@gitlab.4so.local:fourseasons/4so-web-template.git"
  },
  "keywords": [
    "HTML5",
    "CSS",
    "JavaScript",
    "SASS"
  ],
  "bugs": {
    "url": "http://gitlab.4so.local/fourseasons/4so-web-template/issues"
  },
  "scripts": {
    "start": "node server",
    "build": "NODE_ENV=production rimraf dist && webpack --config ./webpack/webpack.production.config.js --progress --profile --colors",
    "lint": "standard --parser babel-eslint",
    "fix": "standard --parser babel-eslint --fix",
    "stylelint": "stylelint \"src/sass/**/*.scss\" || echo",
    "test:clean": "rimraf ./coverage",
    "pretest": "npm run test:clean && npm run lint && npm run stylelint",
    "test": "NODE_ENV=test jest --coverage",
    "test:watch": "NODE_ENV=test jest --coverage --watch",
    "coveralls": "NODE_ENV=test jest --coverage --runInBand && cat ./coverage/lcov.info | coveralls",
    "svg-sprite": "rimraf src/img/sprite.svg && svg-sprite --config svg-sprite.json src/img/**/*.svg"
  },
  "babel": {
    "presets": [
      [
        "es2015",
        {
          "modules": false
        }
      ],
      "stage-0"
    ],
    "env": {
      "test": {
        "plugins": [
          [
            "transform-es2015-modules-commonjs"
          ]
        ]
      }
    }
  },
  "jest": {
    "modulePaths": [
      "src"
    ],
    "moduleFileExtensions": [
      "js"
    ],
    "collectCoverageFrom": [
      "**/src/**/*.js"
    ],
    "moduleNameMapper": {
      "\\.(jpeg|jpg|png|gif|eot|webp|svg|ttf|woff2|mp3|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|scss)$": "<rootDir>/__mocks__/styleMock.js"
    },
    "coverageReporters": [
      "json",
      "lcov",
      "text"
    ]
  },
  "standard": {
    "ignore": [
      "**/dist/",
      "**/tests/"
    ],
    "globals": [
      "describe",
      "it",
      "expect"
    ]
  },
  "license": "UNLICENSED",
  "private": true,
  "author": {
    "name": "fourseasons",
    "email": "info@4so.de",
    "url": "http://www.4so.de"
  },
  "contributors": [
    "Henryk Kurze",
    "Theo Salzmann"
  ],
  "homepage": "http://gitlab.4so.local/fourseasons/4so-web-template",
  "dependencies": {
    "babel-polyfill": "^6.23.0",
    "postcss": "^6.0.6"
  },
  "engines": {},
  "devDependencies": {
    "autoprefixer": "^7.1.1",
    "babel-core": "^6.21.0",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.3",
    "babel-loader": "^7.1.1",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "coveralls": "^2.13.1",
    "cross-env": "^5.0.1",
    "css-loader": "^0.28.4",
    "eslint-loader": "^1.9.0",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^0.11.2",
    "html-webpack-plugin": "^2.29.0",
    "image-webpack-loader": "^3.3.1",
    "jest": "^20.0.4",
    "node-sass": "^4.5.3",
    "postcss-loader": "^2.0.6",
    "rimraf": "^2.5.4",
    "sass-loader": "^6.0.6",
    "standard": "^10.0.2",
    "standard-loader": "^6.0.1",
    "style-loader": "^0.18.2",
    "stylelint": "^7.7.1",
    "stylelint-config-standard": "^16.0.0",
    "stylelint-scss": "^1.4.1",
    "svg-sprite": "^1.3.6",
    "webpack": "^3.1.0",
    "webpack-dev-server": "^2.5.1"
  }
}
